<h1>New Wiki</h1>

<div class="row">
  <div class="col-md-4">
     <p>Guidelines for wikis</p>
      <ul>
        <li>Think carefully.</li>
        <li>Write well.</li>
        <li>Don't be mean.</li>
      </ul>
    </div>
</div>
   
<%= form_for @wikis do |f| %>
    <div class="form-group">
        <%= f.text_field :title, class: 'form-control', placeholder: "Title" %>
    </div>
    <div class="form-group">
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Body" %>
    </div>
    <div class="form-group">
        <%= f.submit "New", class: 'btn btn-success' %>
    </div>
    
<% end %>
    